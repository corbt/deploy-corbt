#!/usr/bin/env bash
<% require "../conf" %>
<% version = Site::CONFIG[:ruby_version] %>
set -e

cd ~/tmp

wget -c http://ftp.ruby-lang.org/pub/ruby/2.0/ruby-<%= version %>.tar.gz
tar xzf ruby-<%= version %>.tar.gz
cd ruby-<%= version %>
 
./configure
make
 
sudo checkinstall -y \
  --pkgversion <%= version %> \
  --provides "ruby-interpreter"
